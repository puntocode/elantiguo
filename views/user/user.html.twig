{% extends '/base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block titleDash %}Usuarios{% endblock %}
{% block infoDash %}Registro de usuarios del Sistema{% endblock %}

{% block nuevo %}
    <button class="btn btn-primary" data-toggle="modal" data-target="#addUser">NUEVO USUARIO</button>
    <!-- Modal Insertar Usuarios-->
    <div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="myModallabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="cerrar_modal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4><i class="fa fa-user"></i> Agregar Usuario</h4>
                </div>
                <form class="form-horizontal" name="insert-user" method="post" action="{{ urlFor('new-user') }}" data-toggle="validator">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">Usuario</label>
                            <div class="col-sm-10">
                                <input type="text" name="usuario" class="form-control" placeholder="Usuario único sin espacios" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">Contraseña</label>
                            <div class="col-sm-10">
                                <input type="password" name="pass" class="form-control" placeholder="Contraseña" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">Repetir Contraseña</label>
                            <div class="col-sm-10">
                                <input type="password" name="pass2" class="form-control" placeholder="Repetir Contraseña" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">Rol</label>
                            <div class="col-sm-10">
                                <select name="rol" class="form-control" required>
                                    <option value="2"> Usuario</option>
                                    <option value="1"> Administrador</option>
                                    <option value="4"> Visitante</option>
                                    <option value="3"> Inventario</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-wd btn-info"><span class="btn-label"><i class="fa fa-check"></i></span> REGISTRAR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {% include '/include/alert.html.twig' %}

{% endblock %}

{% block tabla %}
    <div class="card filterable">
        <div class="card-header">
            <div class="card-title">
                <h4 class="title">Tabla de Usuarios</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th><center>#</center></th>
                        <th>USUARIO</th>
                        <th>ROL</th>
                        <th class="th-title col-sm-2"><center>EDITAR</center></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for dato in usuarios %}
                        <tr>
                            <td><center>{{ dato.iduser }}</center></td>
                            <td>{{ dato.user | upper }}</td>
                            <td>{{ dato.rol | upper }} </td>
                            <td><center><a href=""><i class="fa fa-pencil-square-o"></i></a></center></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.side-menu li:eq(19)').addClass('active');
        $('.side-menu li:eq(25)').addClass('active2');    
    </script>
{% endblock %}