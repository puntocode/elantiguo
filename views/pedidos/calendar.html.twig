{% extends '/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ dir }}/assets/css/lib/fullcalendar.min.css" />
{% endblock %}

{% block title %}Calendario{% endblock %}

{% block titleDash %}Calendario de Deudas{% endblock %}
{% block infoDash %}Muestra un calendario de las deudas a cobrar{% endblock %}

{% block nuevo %}
    <a class="btn btn-success" href="{{ urlFor('dashboard', {'mes':mes|date("m"), 'anho':anho|date("Y")}) }}"><i class="fa fa-home"></i></a>
    <a class="btn btn-primary" href="{{ urlFor('pedidos') }}"><i class="fa fa-shopping-cart"></i></a>
    {% include '/pedidos/modal-deudas.html.twig' %}

    <!-- Modal BUSQUEDA MENSUAL-->
    <div class="modal fade" id="mensual" tabindex="-1" role="dialog" aria-labelledby="myModallabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="cerrar_modal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4><i class="fa fa-envelope"></i> ENVIAR MES</h4>
                </div>
                <form class="form-horizontal" name="insert-user" method="post" action="{{ urlFor('deuda-correo') }}" data-toggle="validator">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">Mes</label>
                            <div class="col-sm-10">
                                <select id="select-month" name="mes" class="form-control"  required>
                                    <option value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="4">Abril</option>
                                    <option value="5">Mayo</option>
                                    <option value="6">Junio</option>
                                    <option value="7">Julio</option>
                                    <option value="8">Agosto</option>
                                    <option value="9">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="12">Diciembre</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">AÃ±o</label>
                            <div class="col-sm-10">
                                <select id="select-year"  name="anho"  class="form-control"  required>
                                    <option value="2023">2023</option>
                                    <option value="2022">2022</option>
                                    <option value="2021">2021</option>
                                    <option value="2020">2020</option>
                                    <option value="2019">2019</option>
                                    <option value="2018">2018</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-wd btn-info" value="ENVIAR" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block tabla %}
    <div class="card card-calendar">
        <div class="content">
            <div class="col-xs-9">
                <div id="calendar"></div>
            </div>
            <div class="col-xs-3" style="margin-top: 45px">
                <a href="" class="btn btn-primary btn-block color-primary"  data-toggle="modal" data-target="#mensual" style="background-color: transparent"><i class="fa fa-envelope-o"></i> ENVIAR EL MES POR CORREO</a>
                <a href="{{ urlFor('deudas') }}" class="btn btn-danger btn-block color-danger" style="background-color: transparent"><i class="fa fa-money"></i> VER TODAS LAS DEUDAS</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ dir }}/assets/js/lib/calendar/moment.min.js" type="text/javascript"></script>
    <script src="{{ dir }}/assets/js/lib/calendar/fullcalendar.min.js" type="text/javascript"></script>
    <script src="{{ dir }}/assets/js/lib/calendar/es.js" type="text/javascript"></script>
    <script src="{{ dir }}/assets/js/pedidos/calendario-deuda.js" type="text/javascript"></script>
{% endblock %}