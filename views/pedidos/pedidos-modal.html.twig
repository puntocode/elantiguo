<!-- Modal Insertar Pedido-->
<div class="modal fade" id="new-order" tabindex="-1" role="dialog" aria-labelledby="myModallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button id="cerrar_modal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4><i class="fa fa-shopping-cart"></i> Agregar Pedido</h4>
            </div>
            <form class="form-horizontal" name="insert-order" method="post" action="{{ urlFor('insert-order') }}"  data-toggle="validator">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Nro. Presupuesto</label>
                        <div class="col-sm-9">
                            <input type="text" name="nro-order" class="form-control upper" autocomplete="off" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Fecha Pedido</label>
                        <div class="col-sm-9">
                            <input type="date" name="date-order" class="form-control"  required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Cliente</label>
                        <div class="col-sm-8">
                            <select id="sl-customer" name="customer" class="form-control" style="width: 100%" required>
                                {% for entity in clientes %}
                                    <option value="{{ entity.idcliente }}">{{ entity.cliente | upper }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-sm-1 inventario-new-stock">
                            <button type="button" id="btn-add-customer" data-toggle="modal" data-target="#modal-add-customer" class="btn btn-primary"><i class="fa fa-truck"></i></button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Entrega Estimada</label>
                        <div class="col-sm-9">
                            <input type="date" name="date-delivery" class="form-control" autocomplete="off" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Se√±a</label>
                        <div class="col-sm-9">
                            <input type="text" name="sign" class="form-control moneda" value="0" autocomplete="off" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-wd btn-info"><span class="btn-label"></span> INSERTAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Insertar Usuarios-->
<div class="modal fade" id="modal-add-customer" tabindex="-1" role="dialog" aria-labelledby="myModallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button id="cerrar_modal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4><i class="fa fa-address-book-o"></i> AGREGAR CLIENTE</h4>
            </div>
            <form class="form-horizontal" name="insert-customer" method="post" action="{{ urlFor('insert-customer-ajax') }}" data-toggle="validator">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Cliente</label>
                        <div class="col-sm-10">
                            <input type="text" name="customer" class="form-control upper" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">RUC</label>
                        <div class="col-sm-10">
                            <input type="text" name="ruc" class="form-control" placeholder="000000-0" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Direccion</label>
                        <div class="col-sm-10">
                            <input type="text" name="address" class="form-control" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Ciudad</label>
                        <div class="col-sm-10">
                            <input type="text" name="city" class="form-control upper" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Contacto</label>
                        <div class="col-sm-10">
                            <input type="text" name="contact" class="form-control upper" placeholder="Nombre del Contacto" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Telefono</label>
                        <div class="col-sm-10">
                            <input type="text"  name="phone" class="form-control" autocomplete="off" placeholder="021123658">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Celular</label>
                        <div class="col-sm-10">
                            <input type="text"  name="cellphone" class="form-control" autocomplete="off" placeholder="09XX123456">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" name="mail" class="form-control" autocomplete="off" placeholder="elantiguo@hotmail.com">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-wd btn-info"><span class="btn-label"></span> INSERTAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

