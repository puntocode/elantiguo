{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block titleDash %}Cliente{% endblock %}
{% block infoDash %}Actualizacion de los datos del Cliente{% endblock %}

{% block tabla %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Datos del Cliente: {{ custmoer.cliente }}</h4>
        </div>

        <div class="panel-body">
            <form class="form-horizontal" method="post" action="{{ urlFor('update-customer') }}" data-toggle="validator">
                <input type="hidden" name="id" value="{{ customer.idcliente }}"  required/>
                <div class="form-group">
                    <label class="control-label col-sm-2">Cliente</label>
                    <div class="col-sm-10">
                        <input type="text" name="customer" value="{{ customer.cliente }}" autocomplete="off" class="form-control upper" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">RUC</label>
                    <div class="col-sm-10">
                        <input type="text" name="ruc" value="{{ customer.ruc }}" class="form-control" autocomplete="off" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Direccion</label>
                    <div class="col-sm-10">
                        <input type="text" name="address" value="{{ customer.direccion }}" class="form-control" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Ciudad</label>
                    <div class="col-sm-10">
                        <input type="text" name="city" value="{{ customer.localidad }}" class="form-control upper" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Contacto</label>
                    <div class="col-sm-10">
                        <input type="text" name="contact" value="{{ customer.contacto }}" class="form-control" autocomplete="off" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Telefono</label>
                    <div class="col-sm-10">
                        <input type="text" name="phone" value="{{ customer.telefono }}" class="form-control" autocomplete="off" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Celular</label>
                    <div class="col-sm-10">
                        <input type="text" name="cellphone" value="{{ customer.celular }}" class="form-control" autocomplete="off" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="mail" value="{{ customer.email }}" class="form-control" autocomplete="off" />
                    </div>
                </div>
                <div class="text-right"><input type="submit" value="ACTUALIZAR" class="btn btn-info"/></div>
            </form>
        </div>
    </div>

    <div><a class="btn btn-xs btn-primary" href="{{ urlFor('clientes') }}"><i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Regresar</a></div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.side-menu li:eq(19)').addClass('active');
        $('.side-menu li:eq(20)').addClass('active2');
    </script>
{% endblock %}