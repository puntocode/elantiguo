{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block titleDash %}Materiales{% endblock %}
{% block infoDash %}Actualizacion de los datos del material{% endblock %}

{% block tabla %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Datos del Material: {{ stock.producto }}</h4>
        </div>

        <div class="panel-body">
            <form class="form-horizontal" method="post" action="{{ urlFor('update-stock') }}" data-toggle="validator">
                <input type="hidden" name="id" value="{{ stock.idstock }}"  required/>
                <input type="hidden" name="user" value="{{ user['iduser'] }}" />
                <input type="hidden" name="codigo" value="{{ stock.codigo }}"  required/>
                <div class="form-group">
                    <label class="control-label col-sm-2">Producto</label>
                    <div class="col-sm-10">
                        <input type="text" name="producto" value="{{ stock.producto }}"  class="form-control" required />
                        <input type="hidden" name="producto_anterior" value="{{ stock.producto }}"  required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Ubicacion</label>
                    <div class="col-sm-10">
                        <input type="text" name="ubicacion" value="{{ stock.ubicacion }}" placeholder="X.0.0" class="form-control upper" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Uni/Med</label>
                    <div class="col-sm-10">
                        <input type="text" name="unidad" value="{{ stock.unidad }}" placeholder="U/M" class="form-control upper" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Cantidad</label>
                    <div class="col-sm-10">
                        <input type="number" step="0.01" name="cantidad" value="{{ stock.cantidad }}" class="form-control" autocomplete="off" placeholder="0" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Stock Minimo</label>
                    <div class="col-sm-10">
                        <input type="number" step="0.01" name="minimo" value="{{ stock.stock_min }}" class="form-control" autocomplete="off" placeholder="0" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Costo</label>
                    <div class="col-sm-10">
                        <input type="number" name="costo"  value="{{ stock.costo }}" class="form-control" placeholder="0" autocomplete="off" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Comentario</label>
                    <div class="col-sm-10">
                        <input type="text" name="comentario"  class="form-control" placeholder="Por que se modifica?" autocomplete="off" required>
                    </div>
                </div>
                <div class="text-right"><input type="submit" value="ACTUALIZAR" class="btn btn-info"/></div>
            </form>
        </div>
    </div>

    <div><a class="btn btn-xs btn-primary" href="{{ urlFor('materiales') }}"><i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Regresar</a></div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.side-menu li:eq(1)').addClass('active');
        $('.side-menu li:eq(2)').addClass('active2');
    </script>
{% endblock %}