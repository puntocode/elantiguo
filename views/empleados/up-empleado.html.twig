{% extends 'base.html.twig' %}

{% block title %}Empleado{% endblock %}

{% block titleDash %}Editar Empleado{% endblock %}
{% block infoDash %}Actualiza los datos del Empleado{% endblock %}

{% block tabla %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Datos del Empleado</h4>
        </div>

        <div class="panel-body">
            <form class="form-horizontal" method="post" action="{{ urlFor('update-empleado') }}" data-toggle="validator">
                <input type="hidden" name="id" value="{{ empleado.idempleado }}"  required/>

                <div class="form-group">
                    <label class="control-label col-sm-2">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" name="nombre" value="{{ empleado.nombre }}" class="form-control upper" placeholder="HILARIO SANCHEZ" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Documento</label>
                    <div class="col-sm-10">
                        <input type="text" name="ci" value="{{ empleado.ci }}" class="form-control" placeholder="Nro de Cedula" autocomplete="off" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Nacimiento</label>
                    <div class="col-sm-10">
                        <input type="date" name="nacimiento" value="{{ empleado.nacimiento }}" class="form-control" placeholder="01-01-1980" autocomplete="off" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Celular</label>
                    <div class="col-sm-10">
                        <input type="text" name="telefono" value="{{ empleado.telefono }}" class="form-control upper" placeholder="099x000000" autocomplete="off" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="email" value="{{ empleado.email }}" class="form-control" placeholder="email@elantiguo.com" autocomplete="off">
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Ciudad</label>
                    <div class="col-sm-10">
                        <input type="text" name="ciudad" value="{{ empleado.ciudad }}" class="form-control upper" autocomplete="off" placeholder="ASUNCION" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Sueldo</label>
                    <div class="col-sm-10">
                        <input type="number"  name="sueldo"  value="{{ empleado.sueldo }}" class="form-control" autocomplete="off" placeholder="100000" >
                    </div>
                </div>
                <div class="text-right"><input type="submit" value="ACTUALIZAR" class="btn btn-info"/></div>
            </form>
        </div>
    </div>

    <div><a class="btn btn-xs btn-primary" href="{{ urlFor('empleados') }}"><i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Regresar</a></div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.side-menu li:eq(21)').addClass('active');
    </script>
{% endblock %}